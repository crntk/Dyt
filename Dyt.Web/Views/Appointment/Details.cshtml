     <span class="status-badge @(Model.Status.ToLower() == "confirmed" ? "confirmed" : Model.Status.ToLower() == "cancelled" ? "cancelled" : "pending")">
       @if (Model.Status.ToLower() == "confirmed")
       {
   <text>✓ Onaylandı</text>
  }
    else if (Model.Status.ToLower() == "cancelled")
     {
    <text>✗ İptal Edildi</text>
 }
  else
     {
    <text>⏳ @Model.Status</text>
      }
    </span>
          </div>
            <div style="font-size: 14px; color: #666; margin-top: 8px;">
  Onay Durumu: <strong>@Model.ConfirmationState</strong>
  </div>
    </div>
        </div>
      </div>

      <div class="action-buttons">
        <a href="~/" class="btn-modern btn-primary-modern">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width:20px;height:20px;fill:currentColor">
 <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
  </svg>
          Ana Sayfaya Dön
