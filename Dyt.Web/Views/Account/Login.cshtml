@* Basit giriş formu – e-posta/parola *@
@{
    ViewData["Title"] = "Giriş";
    var returnUrl = (string?)ViewData["ReturnUrl"];
}
<div class="container" style="max-width:520px">
  <div class="card shadow-sm" style="border-radius:14px; margin:40px auto;">
    <div class="card-body p-4">
      <h1 class="h4 mb-3">Yönetici Girişi</h1>
      <p class="text-muted">Bu panel yalnızca site sahibi diyetisyen için tasarlanmıştır.</p>
      <form asp-action="Login" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="returnUrl" value="@returnUrl" />
        <div class="mb-3">
          <label class="form-label">E-posta</label>
          <input type="email" name="email" class="form-control" required />
        </div>
        <div class="mb-3">
          <label class="form-label">Parola</label>
          <input type="password" name="password" class="form-control" required />
        </div>
        <div class="text-danger mb-2">
          @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
          {
              <div>@e.ErrorMessage</div>
          }
        </div>
        <button type="submit" class="btn btn-primary">Giriş Yap</button>
      </form>
    </div>
  </div>
</div>
