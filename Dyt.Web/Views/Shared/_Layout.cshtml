   transform: scale(1.1);
            box-shadow: 0 2px 8px rgba(255, 255, 255, 0.4);
       color: white;
        }

        .notif-bell svg {
       fill: white;
      stroke: white;
        }

   .notif-badge {
   position: absolute;
    top: -2px;
      right: -2px;
   background: linear-gradient(135deg, #FF5722, #F44336);
       color: #fff;
   border-radius: 10px;
      font-size: 10px;
        font-weight: 700;
        padding: 2px 6px;
      min-width: 16px;
 text-align: center;
   box-shadow: 0 2px 8px rgba(255, 87, 34, 0.5);
            animation: bellPulse 2s ease-in-out infinite;
  }

        @@keyframes bellPulse {
        0%, 100% {
        transform: scale(1);
}
        50% {
        transform: scale(1.1);
   }
        }

        /* Fixed Social Icons - Bottom Right */
   .fixed-social-icons {
            position: fixed;
      bottom: 80px;
   right: 20px;
display: flex;
  flex-direction: column;
 gap: 12px;
    z-index: 1000;
 }

       .fixed-social-icons a {
         display: flex;
  align-items: center;
          justify-content: center;
   width: 50px;
   height: 50px;
          border-radius: 50%;
   background: linear-gradient(135deg, var(--brand-green), #388E3C);
      color: white;
    text-decoration: none;
        box-shadow: 0 4px 12px rgba(76, 175, 80, 0.3);
     transition: all 0.3s ease;
       padding: 12px;
  }

    .fixed-social-icons a:hover {
   transform: translateY(-4px) scale(1.1);
   box-shadow: 0 6px 20px rgba(76, 175, 80, 0.5);
  }

     .fixed-social-icons a svg {
  width: 100%;
      height: 100%;
 stroke: white;
    stroke-width: 0;
       fill: white;
  }

  .fixed-social-icons a.instagram {
   background: linear-gradient(135deg, var(--brand-green), var(--brand-light-green));
   box-shadow: 0 4px 12px rgba(76, 175, 80, 0.4);
 }

  .fixed-social-icons a.instagram:hover {
   background: linear-gradient(135deg, #388E3C, var(--brand-green));
   box-shadow: 0 6px 20px rgba(76, 175, 80, 0.6);
 }

