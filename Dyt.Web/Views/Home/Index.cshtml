@using Dyt.Data.Entities.Content
@model List<BlogPost>
@{
    ViewData["Title"] = "Anasayfa";
}
<section class="hero py-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-7">
        <h1 class="display-5 fw-bold mb-3">Sağlıklı Beslenme Yolculuğuna Hoş Geldiniz</h1>
        <p class="lead text-secondary">Güncel makaleler, pratik öneriler ve kişisel randevu planlama.</p>
        <div class="mt-3">
          <a class="btn btn-lg btn-primary me-2" asp-controller="Appointment" asp-action="Create">Randevu Al</a>
          <a class="btn btn-lg btn-outline-secondary" asp-controller="Blog" asp-action="Index">Bloğu Gör</a>
        </div>
      </div>
      <div class="col-lg-5">
        <div class="card shadow-sm p-4">
          <h5 class="mb-3">Hızlı Randevu</h5>
          <p class="text-muted mb-2">Uygun tarih ve saatleri anında görüp randevunuzu oluşturun.</p>
          <a class="btn btn-primary" asp-controller="Appointment" asp-action="Create">Randevu Oluştur</a>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="container py-4">
  <h3 class="mb-3">Son Paylaşımlar</h3>
  <div class="row g-4">
    @foreach (var p in Model.Take(6))
    {
      var cover = p.Media.OrderBy(m=>m.DisplayOrder).FirstOrDefault()?.MediaFile?.Url;
      <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm">
          @if(!string.IsNullOrWhiteSpace(cover)){
            <img src="@cover" class="card-img-top" alt="@p.Title" />
          }
          <div class="card-body d-flex flex-column">
            <div class="small text-muted mb-1">@((p.PublishDateUtc ?? p.CreatedAtUtc).ToLocalTime().ToString("dd.MM.yyyy"))</div>
            <div class="fw-semibold">@p.Title</div>
            <div class="text-muted small mb-2">@p.Summary</div>
            <div class="mt-auto">
              <a class="btn btn-sm btn-primary" asp-controller="Blog" asp-action="Post" asp-route-slug="@p.Slug">Oku</a>
            </div>
          </div>
        </div>
      </div>
    }
  </div>
</section>
