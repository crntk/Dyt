@model string
@{
    ViewData["Title"] = "Abonelik Ýptali";
}

<style>
  :root{ --brand:#4CAF50; --brand-orange:#FF9800 }
  
  .result-hero{
    position:relative;
    overflow:hidden;
    min-height:100vh;
    display:flex;
    align-items:center;
    justify-content:center;
    background:
      radial-gradient(1200px 500px at 20% -10%, rgba(76,175,80,.18), transparent),
      radial-gradient(900px 350px at 80% -10%, rgba(255,152,0,.15), transparent);
  }
  
  .result-hero:before{
    content:"";
    position:absolute;
    inset:-20%;
    background:
      radial-gradient(rgba(76,175,80,.15) 1px, transparent 1.5px),
      radial-gradient(rgba(255,152,0,.08) 1px, transparent 1.5px);
background-size:32px 32px, 64px 64px;
    background-position:0 0, 16px 16px;
    opacity:.4;
    animation:dotMove 25s linear infinite;
  }
  
  @@keyframes dotMove{
    from{transform:translate(0,0)}
    to{transform:translate(32px,32px)}
  }
  
  .result-card{
    position:relative;
    z-index:1;
    background:#fff;
    border-radius:24px;
    padding:48px;
    max-width:500px;
    width:100%;
    box-shadow:0 20px 60px rgba(0,0,0,.12);
    border:1px solid rgba(76,175,80,.2);
    text-align:center;
    animation:slideUp 0.6s ease;
  }
  
  @@keyframes slideUp{
    from{
    opacity:0;
      transform:translateY(30px);
    }
    to{
      opacity:1;
      transform:translateY(0);
    }
  }
  
  .result-icon{
    width:100px;
    height:100px;
    background:linear-gradient(135deg, rgba(76,175,80,.1), rgba(255,152,0,.08));
    border-radius:50%;
    display:inline-flex;
    align-items:center;
    justify-content:center;
    font-size:48px;
    margin-bottom:24px;
    animation:bounce 2s ease infinite;
  }
  
  @@keyframes bounce{
    0%, 100%{transform:translateY(0)}
    50%{transform:translateY(-10px)}
  }
  
  .result-title{
  font-size:28px;
    font-weight:700;
    color:#333;
    margin-bottom:16px;
  }
  
  .result-message{
    font-size:16px;
    color:#666;
    line-height:1.6;
    margin-bottom:32px;
  }
  
  .btn-home{
    display:inline-flex;
    align-items:center;
    gap:8px;
    padding:14px 28px;
    background:linear-gradient(135deg, #4CAF50, #81C784);
    color:#fff;
    border-radius:12px;
    text-decoration:none;
    font-weight:600;
    transition:all .3s ease;
    box-shadow:0 4px 12px rgba(76,175,80,.3);
  }
  
  .btn-home:hover{
    background:linear-gradient(135deg, #388E3C, #4CAF50);
    transform:translateY(-2px);
    box-shadow:0 8px 24px rgba(76,175,80,.4);
    color:#fff;
  }
  
  @@media (max-width: 576px){
  .result-card{
      padding:32px 24px;
    }
    .result-title{
      font-size:24px;
    }
  }
</style>

<div class="result-hero">
  <div class="result-card">
    <div class="result-icon">??</div>
    <h1 class="result-title">Bülten Aboneliði</h1>
    <p class="result-message">@Model</p>
    <a asp-controller="Home" asp-action="Index" class="btn-home">
      <span>??</span>
      <span>Anasayfaya Dön</span>
    </a>
  </div>
</div>
