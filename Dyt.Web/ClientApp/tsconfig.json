{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [ "ES2020", "DOM", "DOM.Iterable" ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "noEmit": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "types": [ "node" ]
    },
    "include": [ "src" ]
}