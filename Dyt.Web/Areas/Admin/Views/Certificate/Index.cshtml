@model List<Dyt.Contracts.About.Responses.CertificateDto>
@{
 ViewData["Title"] = "Sertifika & Lisans Yönetimi";
}

<style>
  :root{ --brand:#4CAF50; --brand-orange:#FF9800 }
  
  .cert-hero{
    position:relative;
    overflow:hidden;
    background:
      radial-gradient(1200px 500px at 20% -10%, rgba(76,175,80,.18), transparent),
      radial-gradient(900px 350px at 80% -10%, rgba(255,152,0,.15), transparent);
    padding:48px 0 36px;
    margin-bottom:32px;
  }
  .cert-hero:before{
    content:"";
    position:absolute;
 inset:-20%;
    background:
      radial-gradient(rgba(76,175,80,.15) 1px, transparent 1.5px),
      radial-gradient(rgba(255,152,0,.08) 1px, transparent 1.5px);
    background-size:32px 32px, 64px 64px;
    background-position:0 0, 16px 16px;
  opacity:.4;
    animation:dotMove 25s linear infinite;
  }
  @@keyframes dotMove{from{transform:translate(0,0)}to{transform:translate(32px,32px)}}

  .card{
    border-radius:18px;
 border:1px solid rgba(76,175,80,.2);
    box-shadow:0 12px 35px rgba(0,0,0,.08);
    transition:all .3s ease;
  }
  .card:hover{box-shadow:0 18px 50px rgba(76,175,80,.15)}

  .cert-card{
    border:2px solid rgba(76,175,80,.2);
    border-radius:16px;
    padding:20px;
    background:#fff;
    transition:all .3s ease;
    margin-bottom:16px;
  }
  .cert-card:hover{
    transform:translateY(-4px);
    box-shadow:0 12px 30px rgba(76,175,80,.2);
    border-color:#4CAF50;
  }

  .cert-icon{
    width:56px;
    height:56px;
    border-radius:14px;
    display:flex;
    align-items:center;
    justify-content:center;
    font-size:28px;
    background:linear-gradient(135deg, rgba(76,175,80,.12), rgba(255,152,0,.1));
  }

  .badge{
    padding:6px 12px;
    border-radius:999px;
font-weight:600;
    font-size:12px;
  }

  [data-reveal]{opacity:0;transform:translateY(30px);transition:opacity .6s ease, transform .6s ease}
  [data-reveal].in{opacity:1;transform:translateY(0)}

  .empty-state{
    text-align:center;
    padding:60px 20px;
  }
  .empty-state-icon{
    font-size:80px;
    margin-bottom:20px;
    opacity:.5;
  }
</style>

<section class="cert-hero">
  <div class="container position-relative" style="z-index:1">
    <div class="text-center" data-reveal>
      <h1 class="display-5 fw-bold mb-3">@Html.Raw("&#127942;") Sertifika & Lisans</h1>
      <p class="lead mb-0">Mesleki sertifikalarýnýzý ve lisanslarýnýzý yönetin</p>
    </div>
  </div>
</section>

<div class="container pb-5">
  @if (TempData["Success"] != null)
  {
    <div class="alert alert-success alert-dismissible fade show" role="alert" data-reveal>
      @TempData["Success"]
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  }

  @if (TempData["Error"] != null)
  {
    <div class="alert alert-danger alert-dismissible fade show" role="alert" data-reveal>
   @TempData["Error"]
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  }

  <div class="d-flex justify-content-between align-items-center mb-4" data-reveal>
    <h5 class="mb-0 fw-bold">@Html.Raw("&#128203;") Tüm Sertifikalar (@Model.Count)</h5>
    <div class="d-flex gap-2">
      <a asp-action="Create" class="btn btn-primary">
    @Html.Raw("&#10133;") Yeni Ekle
 </a>
      <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
     @Html.Raw("&#8592;") Panele Dön
      </a>
    </div>
  </div>

  @if (Model.Count == 0)
  {
    <div class="card" data-reveal>
 <div class="card-body">
        <div class="empty-state">
          <div class="empty-state-icon">@Html.Raw("&#128220;")</div>
   <h3>Henüz sertifika eklenmemiþ</h3>
          <p class="text-muted">Ýlk sertifikanýzý eklemek için yukarýdaki "Yeni Ekle" butonuna týklayýn.</p>
        </div>
      </div>
  </div>
  }
  else
  {
    @foreach (var cert in Model.OrderBy(x => x.DisplayOrder))
    {
      <div class="cert-card" data-reveal>
     <div class="d-flex gap-3">
          <div class="cert-icon">
   <span>@Html.Raw("&#127941;&#65039;")</span>
          </div>

          <div class="flex-grow-1">
            <div class="d-flex justify-content-between align-items-start mb-2">
      <div>
 <h5 class="mb-1 fw-bold">@cert.Title</h5>
     <div class="text-muted">@cert.Issuer</div>
         </div>
     <div class="d-flex gap-2 align-items-center">
    @if (!cert.IsPublished)
                {
  <span class="badge bg-secondary">Pasif</span>
      }
      else
    {
       <span class="badge bg-success">Yayýnda</span>
   }
     </div>
 </div>

        @if (!string.IsNullOrEmpty(cert.Description))
            {
         <p class="text-muted small mb-2">@cert.Description</p>
    }

            <div class="d-flex justify-content-between align-items-center">
              <div class="text-muted small">
      @if (cert.IssueDate.HasValue)
              {
     <span>@Html.Raw("&#128197;") @cert.IssueDate.Value.ToLocalTime().ToString("MMMM yyyy")</span>
       }
    </div>

    <div class="d-flex gap-2">
                <span class="badge bg-light text-dark border">Sýra: @cert.DisplayOrder</span>
       @if (!string.IsNullOrEmpty(cert.VerificationUrl))
      {
    <a href="@cert.VerificationUrl" target="_blank" class="btn btn-sm btn-outline-info" title="Sertifikayý Doðrula">
     @Html.Raw("&#128279;") Doðrula
 </a>
                }
   <a asp-action="Edit" asp-route-id="@cert.Id" class="btn btn-sm btn-outline-primary">
            @Html.Raw("&#9997;&#65039;") Düzenle
            </a>
     <form asp-action="Delete" asp-route-id="@cert.Id" method="post" style="display:inline" onsubmit="return confirm('Bu sertifikayý silmek istediðinizden emin misiniz?');">
        @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-outline-danger">
          @Html.Raw("&#128465;&#65039;") Sil
       </button>
   </form>
       </div>
 </div>
     </div>
        </div>
    </div>
    }
  }
</div>

@section Scripts{
<script>
(function(){
  const reveals=[...document.querySelectorAll('[data-reveal]')];
  if('IntersectionObserver' in window){
    const io=new IntersectionObserver((entries)=>{
      entries.forEach(en=>{
        if(en.isIntersecting){
          setTimeout(()=>en.target.classList.add('in'), 100);
          io.unobserve(en.target);
 }
      });
    },{threshold:.1, rootMargin:'0px 0px -50px 0px'});
 reveals.forEach(e=>io.observe(e));
  } else {
    reveals.forEach(e=>e.classList.add('in'));
  }
})();
</script>
}
