@{
    ViewData["Title"] = "Kontrol Paneli";
}
<div class="container py-4">
  <div class="row mb-3">
    <div class="col-12">
      <h1 class="h3 fw-bold mb-1">Kontrol Paneli</h1>
      <p class="text-muted">Randevu, çalışma saatleri ve blog yönetimi.</p>
    </div>
  </div>

  <div class="row g-3">
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title">Randevular</h5>
          <p class="card-text text-muted small">Filtreleyin, durumlarını yönetin.</p>
          <a class="btn btn-primary mb-2" asp-area="Admin" asp-controller="Appointments" asp-action="Index">Listeye Git</a>
          <a class="btn btn-success" asp-area="Admin" asp-controller="Appointments" asp-action="Create">✚ Randevu Oluştur</a>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title">Müsaitlik (Tarih Bazlı)</h5>
          <p class="card-text text-muted small">Tarih bazlı müsaitlik/istisna ekleyin.</p>
          <a class="btn btn-primary" asp-area="Admin" asp-controller="WorkingHours" asp-action="Index">Yönet</a>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title">Blog Yönetimi</h5>
          <p class="card-text text-muted small">Anasayfada görünecek yazılar ve görseller.</p>
          <a class="btn btn-primary" asp-area="Admin" asp-controller="BlogAdmin" asp-action="Index">Blog Paylaş</a>
        </div>
      </div>
    </div>
  </div>
</div>
