@{
    ViewData["Title"] = "Kontrol Paneli";
}

<style>
  :root{ 
    --admin-primary: #4CAF50; 
    --admin-primary-dark: #388E3C;
    --admin-secondary: #FF9800;
    --admin-accent: #81C784;
    --admin-bg: #F9FBF7;
    --admin-card-bg: #FFFFFF;
    --admin-border: rgba(76,175,80,.15);
    --admin-shadow: 0 8px 24px rgba(0,0,0,.08);
    --admin-shadow-hover: 0 12px 35px rgba(76,175,80,.15);
  }

  /* Hero Section */
  .admin-hero{
    position:relative;
    overflow:hidden;
 background:linear-gradient(135deg, rgba(76,175,80,.1), rgba(255,152,0,.08));
    padding:48px 0 36px;
    margin-bottom:32px;
    border-radius:0 0 24px 24px;
  }
  .admin-hero:before{
    content:"";
    position:absolute;
    inset:-20%;
    background:
      radial-gradient(rgba(76,175,80,.15) 1px, transparent 1.5px),
      radial-gradient(rgba(255,152,0,.08) 1px, transparent 1.5px);
    background-size:32px 32px, 64px 64px;
    background-position:0 0, 16px 16px;
    opacity:.4;
    animation:dotMove 25s linear infinite;
  }
  @@keyframes dotMove{
    from{transform:translate(0,0)}
    to{transform:translate(32px,32px)}
  }

  .admin-hero-content{
    position:relative;
    z-index:1;
  }

  .admin-title{
    font-size:32px;
 font-weight:800;
    color:#1e293b;
    margin-bottom:8px;
    display:flex;
    align-items:center;
    gap:12px;
  }

  .admin-subtitle{
    font-size:16px;
    color:#64748b;
    margin:0;
  }

.admin-badge{
    display:inline-flex;
    align-items:center;
    gap:6px;
    background:linear-gradient(135deg, var(--admin-primary), var(--admin-accent));
    color:#fff;
    padding:8px 16px;
    border-radius:999px;
    font-size:13px;
    font-weight:700;
    box-shadow:0 4px 12px rgba(76,175,80,.3);
    animation:pulse 2s ease infinite;
  }

  @@keyframes pulse{
    0%, 100%{transform:scale(1)}
    50%{transform:scale(1.05)}
  }

  /* Dashboard Cards */
  .dashboard-card{
    position:relative;
    background:var(--admin-card-bg);
    border-radius:20px;
    border:2px solid var(--admin-border);
    padding:28px;
    transition:all .3s ease;
  overflow:hidden;
    height:100%;
  }

  .dashboard-card:before{
    content:"";
    position:absolute;
    top:0;
    left:0;
    right:0;
  height:4px;
    background:linear-gradient(90deg, var(--admin-primary), var(--admin-secondary));
    transform:scaleX(0);
    transition:transform .3s ease;
  }

  .dashboard-card:hover{
    border-color:var(--admin-primary);
    box-shadow:var(--admin-shadow-hover);
    transform:translateY(-4px);
  }

  .dashboard-card:hover:before{
 transform:scaleX(1);
  }

  .card-icon{
    width:64px;
    height:64px;
    background:linear-gradient(135deg, rgba(76,175,80,.1), rgba(255,152,0,.05));
    border-radius:16px;
    display:flex;
    align-items:center;
    justify-content:center;
    font-size:32px;
    margin-bottom:20px;
    transition:all .3s ease;
  }

  .dashboard-card:hover .card-icon{
    background:linear-gradient(135deg, var(--admin-primary), var(--admin-accent));
    transform:rotate(5deg) scale(1.1);
  }

  .dashboard-card:hover .card-icon-emoji{
    filter:brightness(0) invert(1);
  }

  .card-title-main{
    font-size:20px;
    font-weight:700;
    color:#1e293b;
    margin-bottom:12px;
  }

  .card-description{
    color:#64748b;
    font-size:14px;
    margin-bottom:20px;
    line-height:1.6;
  }

  .card-actions{
    display:flex;
  flex-direction:column;
    gap:10px;
  }

  .btn-admin{
    display:inline-flex;
    align-items:center;
    justify-content:center;
    gap:8px;
    padding:12px 20px;
    border-radius:12px;
    font-weight:600;
    font-size:14px;
    text-decoration:none;
    transition:all .3s ease;
    border:2px solid transparent;
  }

  .btn-admin-primary{
    background:linear-gradient(135deg, var(--admin-primary), var(--admin-accent));
    color:#fff;
  box-shadow:0 4px 12px rgba(76,175,80,.25);
  }

  .btn-admin-primary:hover{
    background:linear-gradient(135deg, var(--admin-primary-dark), var(--admin-primary));
    transform:translateY(-2px);
    box-shadow:0 6px 20px rgba(76,175,80,.35);
    color:#fff;
  }

  .btn-admin-outline{
    background:transparent;
    color:var(--admin-primary);
    border-color:var(--admin-border);
  }

  .btn-admin-outline:hover{
    background:rgba(76,175,80,.1);
    border-color:var(--admin-primary);
    color:var(--admin-primary-dark);
  }

  /* Quick Stats */
  .quick-stats{
    display:grid;
    grid-template-columns:repeat(auto-fit, minmax(200px, 1fr));
    gap:20px;
    margin-bottom:32px;
  }

  .stat-box{
background:linear-gradient(135deg, rgba(76,175,80,.08), rgba(255,152,0,.05));
    border:2px solid var(--admin-border);
    border-radius:16px;
    padding:20px;
    text-align:center;
    transition:all .3s ease;
  }

  .stat-box:hover{
    border-color:var(--admin-primary);
    transform:translateY(-2px);
    box-shadow:0 8px 20px rgba(76,175,80,.15);
  }

  .stat-icon{
 font-size:32px;
    margin-bottom:8px;
  }

  .stat-number{
    font-size:28px;
    font-weight:800;
    background:linear-gradient(135deg, var(--admin-primary), var(--admin-accent));
    -webkit-background-clip:text;
    -webkit-text-fill-color:transparent;
    background-clip:text;
    margin-bottom:4px;
  }

  .stat-label{
    font-size:13px;
    color:#64748b;
    font-weight:600;
    text-transform:uppercase;
    letter-spacing:.5px;
  }

  /* Reveal Animation */
  [data-reveal]{
    opacity:0;
    transform:translateY(30px);
    transition:opacity .6s ease, transform .6s ease;
  }
  [data-reveal].in{
    opacity:1;
    transform:translateY(0);
  }

  /* Responsive */
  @@media (max-width: 768px){
    .admin-title{
      font-size:24px;
    }
    .dashboard-card{
      padding:20px;
    }
    .quick-stats{
      grid-template-columns:1fr;
 }
  }
</style>

<!-- Hero -->
